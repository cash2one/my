RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

#求职招聘
RewriteRule ^job/show_([0-9]+).html$ job.php/job/show/id/$1 [L]
RewriteRule ^resume/(\d+)/show.html$ job.php/resume/show/id/$1 [L]
RewriteRule ^company/show_(\d+).html$ job.php/company/show/id/$1 [L]
RewriteRule ^((job|resume|company)/?[\w]+.*)$ job.php/$1 [L]
RewriteRule ^([a-zA-Z]+)$ job.php/index/index/code/$1 [L]
RewriteRule ^(.{0})$ job.php [L]
